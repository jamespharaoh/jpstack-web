<plugin
	name="web"
	package="wbs.web">

	<layer name="web">

		<component class="context.RequestContextImplementation"/>

		<component class="mvc.WebActionRequestHandler"/>
		<component class="mvc.WebResponderRequestHandler"/>

		<component class="pathhandler.DelegatingPathHandler"/>
		<component class="pathhandler.RegexpPathHandler"/>

		<component class="responder.BinaryResponder"/>
		<component class="responder.JsonResponder"/>
		<component class="responder.TextResponder"/>

		<component class="servlet.PathHandlerServlet"/>
		<component class="servlet.ResponseFilter"/>

	</layer>

</plugin>
