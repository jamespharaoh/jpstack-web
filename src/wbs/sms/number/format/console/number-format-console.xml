<console-module
	name="number-format">

	<console-helper-provider
		object-name="numberFormat"
		view-priv="root">

		<priv-key
			name="numberFormat.manage"
			priv="root:manage"/>

		<context-stuff
			name="numberFormatName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="numberFormat"
		object-name="numberFormat">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="pattern"
				link="numberFormatPattern"
				label="Patterns"
				priv-key="numberFormat.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="number-format"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="number-format"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="number-format"
			type="read-only">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="number-format"
			type="update">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

	</forms>

</console-module>
