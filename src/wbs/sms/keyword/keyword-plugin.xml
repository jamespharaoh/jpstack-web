<plugin
	name="keyword"
	package="wbs.sms.keyword">

	<plugin-dependencies>
		<plugin-dependency name="sms-core"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="keyword-set-fallback"/>
	</sql-scripts>

	<models>
		<enum-type name="keywordSetType"/>
		<model name="keyword"/>
		<model name="keywordSet"/>
		<model name="keywordSetFallback"/>
	</models>

	<layer name="logic">
		<component class="logic.KeywordLogicImplementation"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.KeywordCommand"/>
	</layer>

	<fixtures>
		<fixture name="keyword"/>
	</fixtures>

	<console-modules>
		<console-module name="keyword"/>
		<console-module name="keyword-set"/>
	</console-modules>

</plugin>
